<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
        
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
        
        
    <filter>
        <filter-name>authfilter</filter-name>
        <filter-class>com.leapfrog.springFramework.Filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authfilter</filter-name>
        <url-pattern>/user</url-pattern>    
    </filter-mapping>
    
    <filter>
        <filter-name>adminfilter1</filter-name>
        <filter-class>com.leapfrog.springFramework.Filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminfilter1</filter-name>
        <url-pattern>/admin</url-pattern>    
    </filter-mapping>
    
    <filter>
        <filter-name>adminfilter2</filter-name>
        <filter-class>com.leapfrog.springFramework.Filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminfilter2</filter-name>
        <url-pattern>/admin/*</url-pattern>    
    </filter-mapping>
    
  <error-page>
	<error-code>404</error-code>
        <location>/WEB-INF/jsp/Error/ErrorPage.jsp</location>
  </error-page>
        
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
